<h1 class="page-header">User#new</h1>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>">
    <a href="#" data-dismiss="alert" class="close">Ã—</a>
      <ul>
        <li>
          <%= value %>
        </li>
      </ul>
  </div>
<% end %>
<div class="well col-lg-6">
  <div class="col-md-8">
    <%= simple_form_for(@user, url: "/user", html: { class: 'form-horizontal' }) do |f|%>
      <%= f.input :email%>
      <%= f.input :password, input_html: {value: '12345678', disabled: true}, hint: "user default password: 12345678"%>
      <%= f.input :password_confirmation, input_html: {value: '12345678', disabled: true}, hint: "user default password: 12345678"%>
      <%= f.input :role, collection: User.roles%>
      <%= f.input :dojo, collection: Dojo.all%>
      <%= f.input :rank, collection: User.ranks%>
      <%= f.input :active%>
      <%= f.button :submit%>  
    <%end%>  
  </div>
</div>
