<h1 class="page-header">New user</h1>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>">
    <a href="#" data-dismiss="alert" class="close">Ã—</a>
      <ul>
        <li>
          <%= value %>
        </li>
      </ul>
  </div>
<% end %>
<div class="well col-lg-6">
  <div class="col-md-10">
    <%= simple_form_for(@user, url: "/user", html: { class: 'form-horizontal' }) do |f|%>
      <%= f.input :email%><!-- 
      <%= f.input :password, input_html: {value: "123454678"}%>
      <%= f.input :password_confirmation, input_html: {value: "123454678"}%> -->
      <%= f.input :role, collection: User.roles, selected: 1 %>
      <%= f.input :dojo_id, collection: Dojo.all, required: false%>
      <%= f.input :rank, collection: User.ranks, selected: 1%>
      <%= f.input :active%>
      <%= f.button :submit%> 
      <%=link_to "Back", :back, class: "btn btn-link"%> 
  <%end%> 
  </div>
</div> 
