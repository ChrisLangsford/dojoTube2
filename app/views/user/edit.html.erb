<h1 class="page-header">User#edit</h1>
<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <%if current_user.admin?%>
  <div class="field">
    <%= f.label :admin%>
    <%= f.check_box :admin%>
  </div>
  <%end%>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
