<h1 class="page-header"> Users
	<%= link_to new_user_path, :class => "btn btn-lg btn-success col-md-offset-1" do %>
		<span class="fa fa-plus"></span>
	New
	<%end%> 
</h1>
<br>

<table class="table table-striped table-bordered">
	<thead>
		<th>Email</th>
		<th>Active</th>
		<th>Rank</th>
		<th>Dojo</th>
		<th>Role</th>
		<th>Options</th>
	</thead>
	<tbody>
		<% @users.each do |u|%>
			<tr>
				<td><%= u.email%></td>
				<td>				
					<%if u.active%>
						<p class="btn btn-xs btn-success">Active</p>
					<%else%>
						<p class="btn btn-xs btn-danger">Inactive</p>
					<%end%>				
				</td>
				<td><%= u.rank%></td>
				<%if u.dojo.present?%>
				<td><%= u.dojo.name%></td>
				<%else%>
				<td></td>
				<%end%>					
				<td><%= u.role%></td>
				<td>
					<%= link_to edit_user_path(u),:class =>"btn btn-xs btn-warning" do%>
						<span class="fa fa-pencil"></span>
						Edit
					<%end%>
				</td>				
			</tr>
		<%end%>			
	</tbody>
</table>