<div class="well col-md-5">
	<div class="col-md-10">
		<%= simple_form_for(@bug, :html => {:class => "form-horizontal" }) do |f| %>
		  <%= f.error_notification %>
		  
		    <%=f.input :user, as: :hidden, input_html: {value: (current_user.username? ? current_user.username : current_user.email) , readonly: true}%>
		    <%= f.input :description, label: "Bug description" %>  
			<%= f.button :submit, "Send" %>
			<%= link_to "Back", :back, :class => "btn btn-link"  %>		  
		<% end %>		
	</div>
</div>

