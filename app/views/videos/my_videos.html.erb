<h1 class="page-header">My Videos</h1>

<div class="col-md-8">	
	<table class="table table-bordered">
		<tbody>
			<%@videos.each do |v| %>
			<tr>
				<td>
					<div class="listed-vid row">
						<div class="col-sm-3">
							<%=link_to video_path(v), "data-no-turbolink" => true do%><%= image_tag(v.genre.thumbnail, alt: "thumbnail")%><%end%>							
						</div>
						<div class="col-sm-9">							
							<ul>
								<li>
									<h4><%= link_to v.title.capitalize!, video_path(v),  "data-no-turbolink" => true %>
										<%=link_to edit_video_path(v), :class =>"btn btn-sm btn-default" do%>
										<span class="fa fa-pencil"></span>
										<%end%>
									</h4>
								</li>
								<%ul = v.user%>
								<li>
									<h6>
										by <b><%=ul.username? ? ul.username : ul.email %></b> on <b><%= v.created_at.strftime("%e-%b-%Y")%></b>
									</h6>
								</li>
								<hr/>
								<li>																
									<p><%= v.video_descrip%></p>								
								</li>
							</ul>
						</div>
					</div>
				</td>
			</tr>
			<%end%>		
		</tbody>
	</table>
</div>