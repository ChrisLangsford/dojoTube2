<h1 class="page-header">Videos</h1>

<div class="col-md-8">	
	<table class="table table-bordered">
		<tbody>
			<%@videos.each do |v| %>
			<tr>
				<td>
					<div class="listed-vid row">
						<div class="col-sm-3">
							<img src="#" alt="thumbnail">							
						</div>
						<div class="col-sm-9">							
							<ul>
								<li><h4><%= link_to v.title.capitalize!, video_path(v), "data-no-turbolink" => true%></h4></li>
								<li>
									<h6>
										by <b><%=v.uploader%></b> on <b><%= v.created_at.strftime("%e-%b-%Y")%></b>
									</h6>
								</li>
								<hr/>
								<li>																
									<p><%= v.video_descrip%></p>								
								</li>
							</ul>
						</div>
					</div>
				</td>
			</tr>
			<%end%>		
		</tbody>
	</table>
</div>