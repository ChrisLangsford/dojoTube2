<h1 class="page-header">Upload Video</h1>

<div class="well col-md-4">
  <div class="col-md-10">  
<%=simple_form_for (@video), :html => { :multipart => true, :class => "directUpload form-horizontal",  } do |f|%>
	<% if @video.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

	      <ul>
	      <% @video.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	<% end %>

  <%categories = []%>
  <%Category.all.order(:category_name).each {|c| categories.push(c.category_name)}%>

  <%=f.input :file_url, as: :file, label: "File"%>
  <%=f.input :title%>
  <%=f.input :video_descrip, as: :text, label: "Description" %>
  <%=f.input :uploader, input_html: {value: current_user.email, readonly: true}%>
  <%=f.input :category_id, collection: categories%>
  <%=f.input :rank, collection: User.ranks, hint: "The lowest student level that can access this video"%>
  <%= f.button :submit, "Save"%>
  <%= link_to "Back", :back, class: "btn btn-default"%>
  </div>
</div>

